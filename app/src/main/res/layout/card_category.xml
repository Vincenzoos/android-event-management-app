<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_category="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_category:cardBackgroundColor="@android:color/holo_blue_dark"
    card_category:cardCornerRadius="12dp"
    card_category:cardElevation="3dp"
    card_category:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvCardCateID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CateID"
            android:textColor="@color/white"
            android:textSize="12sp"
            card_category:layout_constraintEnd_toStartOf="@+id/tvCardCateName"
            card_category:layout_constraintHorizontal_bias="0.0"
            card_category:layout_constraintStart_toStartOf="parent"
            card_category:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardCateName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="12sp"
            card_category:layout_constraintEnd_toStartOf="@+id/tvCardCateEventCount"
            card_category:layout_constraintHorizontal_bias="0.5"
            card_category:layout_constraintStart_toEndOf="@+id/tvCardCateID"
            card_category:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardCateEventCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EventCount"
            android:textColor="@color/white"
            android:textSize="12sp"
            card_category:layout_constraintEnd_toStartOf="@+id/tvCardCateIsActive"
            card_category:layout_constraintHorizontal_bias="0.5"
            card_category:layout_constraintStart_toEndOf="@+id/tvCardCateName"
            card_category:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardCateIsActive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Active?"
            android:textColor="@color/white"
            android:textSize="12sp"
            card_category:layout_constraintEnd_toStartOf="@+id/tvCardCateLocation"
            card_category:layout_constraintHorizontal_bias="0.5"
            card_category:layout_constraintStart_toEndOf="@+id/tvCardCateEventCount"
            card_category:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardCateLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/white"
            android:textSize="12sp"
            card_category:layout_constraintEnd_toEndOf="parent"
            card_category:layout_constraintHorizontal_bias="0.5"
            card_category:layout_constraintStart_toEndOf="@+id/tvCardCateIsActive"
            card_category:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>